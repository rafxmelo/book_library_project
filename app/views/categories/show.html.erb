<h1><%= @category.name %></h1>
<div class="row">
  <% @category.books.each do |book| %>
    <div class="col-md-4">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title"><%= link_to book.title, book_path(book) %></h5>
          <p class="card-text">Author: <%= book.author&.name || "Unknown" %></p>
        </div>
      </div>
    </div>
  <% end %>
</div>
